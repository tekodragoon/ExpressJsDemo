<% padTo2Digits = function(num) {
  return num.toString().padStart(2, '0');
}
%>

<% formatDate = function(date) {
  return [
    padTo2Digits(date.getDate()),
    padTo2Digits(date.getMonth() + 1),
    date.getFullYear(),
  ].join('/');
}
%>

<% formatInputDate = function(date) {
  return [
    date.getFullYear(),
    padTo2Digits(date.getMonth() + 1),
    padTo2Digits(date.getDate()),
  ].join('-');
}
%>