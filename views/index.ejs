<!DOCTYPE html>
<html lang="en">
<%- include("_head", {documentTitle: "home" }); %>
<body>
  <%- include("_nav", {currentUser: locals.user}); %>
  <% if (messages.info) { %>
    <div class="info flash"> <%= messages.info %> </div>
  <% } %>
  <% if (messages.error) { %>
    <div class="error flash"> <%= messages.error %> </div>
  <% } %>
  <% if (locals.user) { %>
    <h1>Hello <%= user.firstName %></h1>
  <% } %>
  <% if (locals.name) { %>
    <h1>Hello <%= name %></h1>
  <% } %>
</body>
</html>