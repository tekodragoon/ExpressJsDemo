<!DOCTYPE html>
<html lang="en">
  <%- include("_head", {documentTitle: "Users List" }); %>
<body>
  <%- include("_nav", {currentUser: locals.user}); %>
  <% include("_formatDate") %>
  <h1>User</h1>
  <form class="util-form" action="/userUpdate" method="post">
    <fieldset>
      <legend>user information</legend>
      <% if (messages.error) { %>
        <div class="error flash"> <%= messages.error %> </div>
      <% } %>
      <input type="hidden" name="_id" value="<%= myUser._id %>">
      <div>
        <label for="lastName">Lastname</label>
        <input type="text" id="lastName" name="lastName" value="<%= myUser.lastName %>">
      </div>
      <div>
        <label for="firstName">Firstname</label>
        <input type="text" id="firstName" name="firstName" value="<%= myUser.firstName %>">
      </div>
      <div>
        <label for="birthdate">Birthdate</label>
        <input type="date" id="birthdate" name="birthdate" value="<%= formatInputDate(myUser.birthdate) %>">
      </div>
      <% if (myUser.role === "coach") { %>
      <div>
        <label for="discipline">Discipline</label>
        <input type="text" name="discipline" id="discipline" value="<%= myCoach.discipline %>">
      </div>
      <div>
        <label for="bio">Bio</label>
        <input type="text" name="bio" id="bio" value="<%= myCoach.bio %>">
      </div>
      <% } %>
      <% if (myUser.role === "customer") { %>
        <div>
          <label for="level">Level</label>
          <select id="level" name="level">
            <option value="beginner" <% if (myCustomer.level === "beginner")  { %> selected <% } %> >
              Beginner</option>
            <option value="intermediate" <% if (myCustomer.level === "intermediate")  { %> selected <% } %>>
              Intermediate</option>
            <option value="advanced" <% if (myCustomer.level === "advanced")  { %> selected <% } %>>
              Advanced</option>
          </select>
        </div>
        <% } %>
    </fieldset>
    <button class="btn" type="submit">Save</button>
  </form>
</body>
</html>